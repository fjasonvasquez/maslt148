<%= form_for(@website_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 13 %>
        </div>
      </div>
    </div>

  <hr>

  <div class="col-md-12">
    <h2>Partners Include:</h2>
    <div>
      <%= f.fields_for :partners do |partner_form| %>
        <div class="form-group">
          <%= partner_form.label :name %>
          <%= partner_form.text_field :name, class: 'form-control' %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit 'Save Event', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>