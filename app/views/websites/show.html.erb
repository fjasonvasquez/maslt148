<div class="container website-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag website_img(@website_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @website_item.title %></h1>

      <hr>

      <em><%= @website_item.subtitle %></em>

      <p><%= @website_item.body %></p>

      <hr>

      <h3>Partners Include:</h3>

      <% @website_item.partners.each do |p| %>
      <p><%= p.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Edit Item", edit_website_path(@website_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    <div>
  </div>
</div>